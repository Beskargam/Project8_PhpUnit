<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}To Do List app{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdnjs.cloudflare.com/ajax/libs/open-iconic/1.1.1/font/css/open-iconic-bootstrap.min.css"
              rel="stylesheet">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {#<link href="{{ asset('css/shop-homepage.css') }}" rel="stylesheet">#}
    {% endblock %}
</head>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="btn navbar-brand mr-auto p-2" href="{{ path('homepage') }}"><img
                src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms"/>
        To Do List app</a>
    <a class="btn navbar-brand p-2" href="{{ path('homepage') }}">Home</a>|
    {% if app.user.username is defined %}
        <a class="btn navbar-brand p-2" href="{{ path('app_logout') }}">DÃ©connexion</a>|
    {% else %}
        <a class="btn navbar-brand p-2" href="{{ path('app_login') }}">Connexion</a>|
    {% endif %}
    {% if app.user.username is defined %}
        <a class="btn disabled navbar-brand p-2" href="{{ path('user_create') }}">S'enregistrer</a>
    {% else %}
        <a class="btn navbar-brand p-2" href="{{ path('user_create') }}">S'enregistrer</a>
    {% endif %}
</nav>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            {% for flash_message in app.session.flashBag.get('success') %}
                <div class="alert alert-success" role="alert">
                    <strong>Superbe !</strong> {{ flash_message }}
                </div>
            {% endfor %}

            {% for flash_message in app.session.flashBag.get('error') %}
                <div class="alert alert-danger" role="alert">
                    <strong>Oops !</strong> {{ flash_message }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% block body %}{% endblock %}
</body>
<footer class="">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="footer-text">
                Copyright &copy; OpenClassrooms
            </div>
        </div>
    </div>
</footer>
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
{% endblock %}
</html>
