{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="flipboard-login">
        <div class="container body-box">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card home-card">
                        <img class="card-img-top card-img-display" src="{{ asset('img/todolist_homepage.jpg') }}"
                             alt="todo list">
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-10 col-md-6 col-lg-4">

                    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

                    <div class="login-form">
                        <form method="post">
                            <div class="field-space">
                                <label for="inputUsername" class="sr-only">Username</label>
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                                       class="form-control"
                                       placeholder="Nom d'utilisateur" required autofocus>
                            </div>
                            <div class="field-space">
                                <label for="inputPassword" class="sr-only">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control"
                                       placeholder="Mot de passe"
                                       required>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}">
                            <button class="btn btn-lg btn-primary" type="submit">
                                Se connecter
                            </button>

                            <div class="field-space">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}
